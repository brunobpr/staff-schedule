<!DOCTYPE html>
<html>
<title>Roster</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<body style="background-color:white">

<!-- Navbar (sit on top) -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Staff Schedule</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New Roster</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New Staff</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">History</a>
          </li>
        </ul>
      </div>
    </div>
    </nav>
    <nav class="container">
        <h1 class="text-center">ROSTER</h1>
        <h2 class="text-center">WEEK <%= data.roster[0].weekNumber %> (<%= data.roster[0].yearNumber %>)</h2>
    </nav>
<div class="table-responsive text-center">
<table class="table table-bordered  table-striped border-dark">
    <thead class="align-middle">
      <tr class="table-dark">
        <th class="table-light" scope="col">Staff</th>
        <th scope="col">Mon</th>
        <th scope="col">Tue</th>
        <th scope="col">Wed</th>
        <th scope="col">Thu</th>
        <th scope="col">Fri</th>
        <th scope="col">Sat</th>
        <th scope="col">Sun</th>
      </tr>
    </thead>
    <tbody> <%
        data.roster[0].staffs.forEach(function (staff){%>
      <tr class="align-middle table-light">
        <th scope="row"><%= staff.name %></th>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,monday')" data-bs-target="#exampleModal"><%= staff.monday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,tuesday')" data-bs-target="#exampleModal"><%= staff.tuesday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,wednesday')" data-bs-target="#exampleModal"><%= staff.wednesday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,thursday')" data-bs-target="#exampleModal"><%= staff.thursday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,friday')" data-bs-target="#exampleModal"><%= staff.friday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,saturday')" data-bs-target="#exampleModal"><%= staff.saturday %></td>
        <td data-bs-toggle="modal" onClick="saveValue('<%= staff.name %>,sunday')" data-bs-target="#exampleModal"><%= staff.sunday%></td>
      </tr>
      <%}); %>
    </tbody>
  </table>
  </div>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" name="modalTitle" id="modalTitle" ></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div id="modalValue" name="a"></div>
        </div>
        <div class="modal-body align-middle">
            <%
            data.shifts.forEach(function (shift){ %>
            <form enctype="application/json" action="/" method="POST">
                 <input type="hidden" class="staffName" name="staffName" value="">
                 <input type="hidden" name="id" value = "<%= data.roster[0]._id %>">
                 <input type="hidden" name="startTime" value = "<%= shift.startTime%>">
                 <input type="hidden" name="endTime" value = "<%= shift.endTime %>">
                 <button type="submit" class="btn btn-dark"><%= shift.startTime %>  <%= shift.endTime %></button>     
            </form>
            <% }); %>
        </div>
    </div>
  </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<script src="./utils/script.js" type='text/javascript'></script>
</body>
</html>

